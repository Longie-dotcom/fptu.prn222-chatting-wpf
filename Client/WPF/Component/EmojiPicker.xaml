<UserControl x:Class="WPF.Component.EmojiPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="220" Height="220">

    <Grid>
        <!-- ================= 9-Slice BACKGROUND ================= -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <!-- Top -->
                <RowDefinition Height="*"/>
                <!-- Middle -->
                <RowDefinition Height="6"/>
                <!-- Bottom -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6"/>
                <!-- Left -->
                <ColumnDefinition Width="*"/>
                <!-- Center -->
                <ColumnDefinition Width="6"/>
                <!-- Right -->
            </Grid.ColumnDefinitions>

            <!-- Corners -->
            <Image Grid.Row="0" Grid.Column="0" Source="/Asset/Component/PlayerName/player-name-tl.png"/>
            <Image Grid.Row="0" Grid.Column="2" Source="/Asset/Component/PlayerName/player-name-tr.png"/>
            <Image Grid.Row="2" Grid.Column="0" Source="/Asset/Component/PlayerName/player-name-bl.png"/>
            <Image Grid.Row="2" Grid.Column="2" Source="/Asset/Component/PlayerName/player-name-br.png"/>

            <!-- Edges -->
            <Image Grid.Row="0" Grid.Column="1" Source="/Asset/Component/PlayerName/player-name-t.png" Stretch="Fill"/>
            <Image Grid.Row="2" Grid.Column="1" Source="/Asset/Component/PlayerName/player-name-d.png" Stretch="Fill"/>
            <Image Grid.Row="1" Grid.Column="0" Source="/Asset/Component/PlayerName/player-name-l.png" Stretch="Fill"/>
            <Image Grid.Row="1" Grid.Column="2" Source="/Asset/Component/PlayerName/player-name-r.png" Stretch="Fill"/>

            <!-- Body -->
            <Image Grid.Row="1" Grid.Column="1"
                   Source="/Asset/Component/PlayerName/player-name-body.png"
                   Stretch="Fill"/>
        </Grid>

        <!-- ================= EMOJI GRID ================= -->
        <ScrollViewer Margin="16,16,16,16" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="EmojiWrapPanel" />
        </ScrollViewer>
    </Grid>
</UserControl>
