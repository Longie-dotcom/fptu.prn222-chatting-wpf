<UserControl x:Class="WPF.Component.OtherTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:WPF.Component"
             HorizontalAlignment="Left"
             MaxWidth="400"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">

    <!-- ROOT -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Name -->
            <RowDefinition Height="Auto"/>
            <!-- Message -->
            <RowDefinition Height="Auto"/>
            <!-- Cat -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Cat -->
            <ColumnDefinition Width="Auto"/>
            <!-- Bubbles -->
        </Grid.ColumnDefinitions>

        <!-- ================= NAME BUBBLE ================= -->
        <Grid Grid.Row="0" Grid.Column="1"
              HorizontalAlignment="Left"
              Margin="0,0,0,8"
              SnapsToDevicePixels="True">

            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="6"/>
            </Grid.ColumnDefinitions>

            <!-- Corners -->
            <Image Grid.Row="0" Grid.Column="0" Source="/Asset/Component/OtherName/other-name-tl.png"/>
            <Image Grid.Row="0" Grid.Column="2" Source="/Asset/Component/OtherName/other-name-tr.png"/>
            <Image Grid.Row="2" Grid.Column="0" Source="/Asset/Component/OtherName/other-name-bl.png"/>
            <Image Grid.Row="2" Grid.Column="2" Source="/Asset/Component/OtherName/other-name-br.png"/>

            <!-- Edges -->
            <Image Grid.Row="0" Grid.Column="1" Source="/Asset/Component/OtherName/other-name-t.png" Stretch="Fill"/>
            <Image Grid.Row="2" Grid.Column="1" Source="/Asset/Component/OtherName/other-name-d.png" Stretch="Fill"/>
            <Image Grid.Row="1" Grid.Column="0" Source="/Asset/Component/OtherName/other-name-l.png" Stretch="Fill"/>
            <Image Grid.Row="1" Grid.Column="2" Source="/Asset/Component/OtherName/other-name-r.png" Stretch="Fill"/>

            <!-- Body -->
            <Image Grid.Row="1" Grid.Column="1"
                   Source="/Asset/Component/OtherName/other-name-body.png"
                   Stretch="Fill"/>

            <!-- Text -->
            <TextBlock x:Name="UserName"
                       Grid.Row="1"
                       Grid.Column="1"
                       Margin="5,10,5,5"
                       FontFamily="{StaticResource AppFont}"
                       FontSize="16"
                       Foreground="White"
                       TextWrapping="NoWrap"/>
        </Grid>

        <!-- ================= MESSAGE BUBBLE ================= -->
        <Grid Grid.Row="1" Grid.Column="1"
              HorizontalAlignment="Left"
              SnapsToDevicePixels="True">

            <Grid.RowDefinitions>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="16"/>
            </Grid.ColumnDefinitions>

            <!-- Corners -->
            <Image Grid.Row="0" Grid.Column="0" Source="/Asset/Component/OtherTextbox/other-tl.png"/>
            <Image Grid.Row="0" Grid.Column="2" Source="/Asset/Component/OtherTextbox/other-tr.png"/>
            <Image Grid.Row="2" Grid.Column="0" Source="/Asset/Component/OtherTextbox/other-bl.png"/>
            <Image Grid.Row="2" Grid.Column="2" Source="/Asset/Component/OtherTextbox/other-br.png"/>

            <!-- Edges -->
            <Image Grid.Row="0" Grid.Column="1" Source="/Asset/Component/OtherTextbox/other-t.png" Stretch="Fill"/>
            <Image Grid.Row="2" Grid.Column="1" Source="/Asset/Component/OtherTextbox/other-d.png" Stretch="Fill"/>
            <Image Grid.Row="1" Grid.Column="0" Source="/Asset/Component/OtherTextbox/other-l.png" Stretch="Fill"/>
            <Image Grid.Row="1" Grid.Column="2" Source="/Asset/Component/OtherTextbox/other-r.png" Stretch="Fill"/>

            <!-- Body -->
            <Image Grid.Row="1" Grid.Column="1"
                   Source="/Asset/Component/OtherTextbox/other-body.png"
                   Stretch="Fill"/>

            <!-- Text -->
            <Grid x:Name="MessageContent" Grid.Row="1" Grid.Column="1" Margin="0,0,0,6">
                <!-- Text message -->
                <local:EmojiTextBox x:Name="ChatMessage"
                        WordWrap="True" 
                        FontFamily="{StaticResource AppFont}"
                        IsReadOnly="True"
                        MaxWidth="300"
                        FontSize="16"
                        ForeColor="Black"
                        HorizontalAlignment="Left"/>

                <!-- Image message -->
                <Image x:Name="ChatImage"
                       MaxWidth="300"
                       MaxHeight="300"
                       Visibility="Collapsed"
                       Stretch="Uniform"/>
            </Grid>
        </Grid>

        <!-- ================= CAT ================= -->
        <Image Grid.Row="2" Grid.Column="0"
               Source="/Asset/Component/OtherTextbox/other-cat.png"
               Width="32"
               Height="32"
               Margin="4"
               VerticalAlignment="Bottom"
               SnapsToDevicePixels="True"/>
    </Grid>
</UserControl>
