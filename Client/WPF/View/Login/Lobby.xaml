<Window x:Class="WPF.View.Lobby.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WPF.Component"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Width="383"
        Height="147"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True" Name="RootGrid">
        <!-- Pixel-perfect background -->
        <Image Source="/Asset/Frame/lobby-frame.png"
               Width="383"
               Height="147"
               Stretch="None"
               SnapsToDevicePixels="True"
               RenderOptions.BitmapScalingMode="NearestNeighbor"
               RenderOptions.EdgeMode="Aliased"/>

        <!-- Username Input -->
        <TextBox x:Name="UserNameInput"
         Width="266"
         Height="30"
         HorizontalAlignment="Center"
         VerticalAlignment="Top"
         Margin="5,50,0,0"
         Padding="4"
         Text="Abg"
         Background="Transparent"
         Foreground="Black"
         BorderThickness="0"
         TextWrapping="NoWrap"
         FontSize="16"
         AcceptsReturn="False"
         VerticalContentAlignment="Center"
         FontFamily="{StaticResource AppFont}" />

        <!-- Buttons container -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Width="107" Margin="0,101,0,0" Height="46">
            <controls:SpriteButton x:Name="LoginButton" ButtonWidth="108" ButtonHeight="44" Margin="0,0,0,0"
                           NormalPath="Asset/Component/LoginButton/login-button1.png"
                           HoverPath="Asset/Component/LoginButton/login-button2.png"
                           PressedPath="Asset/Component/LoginButton/login-button3.png" />
        </StackPanel>
    </Grid>
</Window>
